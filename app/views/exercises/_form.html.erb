<div class="text-danger"><%= flash[:error_message] %></div>

<%= form_with model: @exercise do |form| %>
  <div class="form-group col-md-6">
    <%= form.label :name%>
    <%= form.text_field :name, class:"form-control"%>
  </div>
  <div class="form-group col-md-6">
    <%= form.label :exercise_type%>
    <%= form.text_field :exercise_type, class:"form-control"%>
  </div>
  <div class="form-group col-md-6">
    <%= form.label :time%>
    <%= form.number_field :time, class:"form-control"%>
  </div>
  <div class="form-group col-md-6">
    <%= form.label :calories%>
    <%= form.number_field :calories, class:"form-control"%>
  </div>
  <div class="form-group col-md-6">
    <%= form.label :instruction_link%>
    <%= form.text_field :instruction_link, class:"form-control"%>
  </div>
  <%= form.submit  class:'btn btn-primary'%>
<% end %>
