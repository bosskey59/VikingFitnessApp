<div class="text-danger"><%= flash[:error_message] %></div>
<%= form_with model: @viking do |form| %>
  <div class="form-group col-md-6">
    <%= form.label :name%>
    <%= form.text_field :name, class:"form-control"%>
  </div>
  <div class="form-group col-md-6">
    <%= form.label :password%>
    <%= form.password_field :password, class:"form-control"%>
  </div>
  <div class="form-group col-md-6">
    <%= form.label :age %>
    <%= form.number_field :age, class:"form-control"%>
  </div>
  <div class="form-group col-md-6">
    <%= form.label "Weight (lbs)"%>
  	<%= form.number_field :weight, {:step => 'any', class:"form-control"} %>
  </div>
  <div class="form-group col-md-6">
    <%= form.label "Body Fat (%)" %>
  	<%= form.number_field :body_fat, {:step => 'any', class:"form-control"}%>
  </div>
  <div class="form-group col-md-6">
    <%= form.label :residence %>
  	<%= form.text_field :residence, class:"form-control"%>
  </div>
  <div class="form-group col-md-6">
    <%= form.label :calories %>
  	<%= form.number_field :calories, {:step => 'any', class:"form-control" }%>
  </div>
  <div class="form-group col-md-6">
    <%= form.label "GIF URL" %>
  	<%= form.text_field :image_url, class:"form-control"%>
  </div>

  <div class="form-group col-md-6"">
    <%= form.label "Diet" %>
  	<%= form.select :diet_id, Diet.all.map{|diet| [diet.diet_type, diet.id]} , {}, class:"form-control" %>
  </div>

	<%= form.submit class:"btn btn-secondary" %>

<% end %>
