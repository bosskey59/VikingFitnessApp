<%= image_tag (@viking.image_url) %>
<br>

<%= form_with model: @viking do |form| %>

	<%= form.label :name %>
	<%= form.text_field :name %>
	<br>

	<%= form.label :age %>
	<%= form.number_field :age%>
	<br>

	<%= form.label :weight %>
	<%= form.number_field :weight, :step => 'any' %>
	<br>

	<%= form.label :body_fat %>
	<%= form.number_field :body_fat, :step => 'any'%>
	<br>

	<%= form.label :residence %>
	<%= form.text_field :residence%>
	<br>

	<%= form.label :calories %>
	<%= form.number_field :calories, :step => 'any' %>
	<br>

	<%= form.label "GIF URL" %>
	<%= form.text_field :image_url%>
	<br>

	<%= form.label "Diet" %>
	<%= form.select :diet_id, Diet.all.map { |diet| [diet.diet_type, diet.id]} %>
	<br>

	<%= form.submit %>

<% end %>